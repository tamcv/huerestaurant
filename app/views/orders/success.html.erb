<div class="container">
    <div class="row">
        <div class="col-xs-12">
    		<div class="invoice-title">
    			<h2 class="pull-right">Order #<%= @order.id %></h2>
    		</div>
    		<hr>
    		<div class="row">
    			<div class="col-xs-6">
    				<address>
    				<strong>Customer Information:</strong><br>
    					<%= @order.username %><br>
    					<%= @order.address %><br>
    					Phone: <%= @order.phone %>
    				</address>
    			</div>
    		</div>
    		<div class="row">
    			<div class="col-xs-6">
    				<address>
    					<strong>Order Date:</strong><br>
    					<%= @order.created_at.strftime("%d %b. %Y %H:%M") %><br><br>
    				</address>
    			</div>
    		</div>
    	</div>
    </div>
    
    <div class="row">
    	<div class="col-md-12">
    		<div class="panel panel-default">
    			<div class="panel-heading">
    				<h3 class="panel-title"><strong>Order summary</strong></h3>
    			</div>
    			<div class="panel-body">
    				<div class="table-responsive">
    					<table class="table table-condensed">
    						<thead>
                                <tr>
                                    <td><strong>Item</strong></td>
        							<td class="text-center"><strong>Price</strong></td>
        							<td class="text-center"><strong>Quantity</strong></td>
                                    <td class="text-center"><strong>Ship</strong></td>
        							<td class="text-right"><strong>Totals</strong></td>
                                </tr>
    						</thead>
    						<tbody>
    							<tr>
    								<td><%= @order.food_item.name %></td>
    								<td class="text-center"><%= number_to_currency(@order.food_item.price) %></td>
    								<td class="text-center"><%= @order.quantity %></td>
    								<td class="text-center"><%= number_to_currency(20000) %></td>
                                    <td class="text-right"><strong> <%= number_to_currency(@order.food_item.price * @order.quantity + 20000) %> </strong></td>
    							</tr>
    						</tbody>
    					</table>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
    <br>
    <br>
    <%= link_to 'Menu', menu_path, class: "btn btn-secondary" %>
</div>